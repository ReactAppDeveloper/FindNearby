<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchActivity">
    <ImageView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewLogo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/madupapplogo"
        />
    <TextView
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:text="Hello Traveller,                    How can we help you today? "
        android:layout_centerInParent="true"
        android:gravity="center"
        android:id="@+id/textViewHeading"
        android:layout_below="@+id/imageViewLogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textSize="20sp"
        android:textColor="#62D8D8" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/editTextQuery"
        android:layout_below="@+id/textViewHeading"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:textColor="#d3d3d3"
        android:hint="e.g. nice budget hotels in Bangkok"
        android:textSize="14sp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:text="GO!"
        android:id="@+id/button"
        android:layout_below="@+id/editTextQuery"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:singleLine="false"
        android:background="#F05F71"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textSize="16sp" />


</RelativeLayout>
